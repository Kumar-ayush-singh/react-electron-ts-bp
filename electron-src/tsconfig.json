
{ 
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "sourceMap": true,
    "removeComments": false,
    "esModuleInterop": true,

    "outDir": "../build/main",
    
    "suppressImplicitAnyIndexErrors": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
  },
  "include": [ "./**/*" ] 
}